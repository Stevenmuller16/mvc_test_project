@model MVC_Challenge.UserAccount
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
        {
            <div class="form-group">

                @Html.TextBoxFor(n => n.UserAccountName, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.UserAccountName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                @Html.TextBoxFor(n => n.UserAccountPassword, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(n => n.UserAccountPassword, "", new { @class = "text-danger" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(n => n.UserAccountRole)
                @Html.TextBoxFor(n => n.UserAccountRole, new { @class = "form-control", @type = "password" })
                
            </div>

            <button type="submit" class="btn btn-success">Register</button>

        }
    </div>
</div>