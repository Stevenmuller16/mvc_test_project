
@model IEnumerable<MVC_Challenge.Post>

@{
    ViewBag.Title = "Blog Posts";
}





<div class="container CreateAccBody pt-5">
    <h4>
        @Html.ActionLink("Back To Posts", "Posts", "Post",null, new { @class = "nameColor" })
    </h4>
    @foreach (Post post in Model)
    {
        <div class="card" style="width:100%;">


            <div class="well backgroundMod pt-5">
                <div class="media">
                    <a class="pull-left px-3 pb-5" href="#">
                        <div style="width:300px; height:300px;">
                            <img class="media-object" style="width:100%; height:100%" src="@post.PostImage">
                        </div>
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">@post.PostTitle</h4>
                        <p class="text-right px-5">By @post.PostAuthor</p>
                        <p id="testst">@post.PostBody</p>
                        <ul class="list-inline list-unstyled">
                            <li>
                                <span>
                                    <i class="glyphicon glyphicon-calendar"></i>
                                    @post.PostDate |
                                </span>

                                <span><i class="fab fa-facebook-square"></i></span>
                                <span><i class="fab fa-twitter-square"></i></span>
                                <span><i class="fab fa-google-plus-square"></i></span>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



