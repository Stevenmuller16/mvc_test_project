@model MVC_Challenge.Post
@{
    ViewBag.Title = "CreateTournament";
}

<h2>CreateTournament</h2>

@Html.ActionLink("Back To Posts", "Posts", "Post")
@using (Html.BeginForm("CreatePost", "Post", FormMethod.Post))
{
<div class="form-horizontal CreateAccBody">
    <h4>Create an Account</h4>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2" for="PostTitle">Post Title</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PostTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PostTitle, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="PostDate">Post Date</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PostDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PostDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="PostAuthor">Author</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PostAuthor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PostAuthor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="PostBody">Blog Post</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PostBody, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PostBody, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="PostImage">Thumbnail</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PostImage, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PostImage, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn" id="login_btn" />
        </div>
    </div>
</div>

}